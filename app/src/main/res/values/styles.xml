<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000033</item>
        <item name="colorPrimaryDark">#000033</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/whiteColor</item>
    </style>

    <style name="MainMenuButton" parent="@android:style/Widget.Button">
        <item name="android:text">@string/sign_up</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/menu_button_shape</item>
        <item name="android:shadowColor">#A8A8A8</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="EditTextMenu" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/menu_edit_text_shape</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>

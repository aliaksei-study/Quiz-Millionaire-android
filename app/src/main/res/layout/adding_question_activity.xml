<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_background_600_1200"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/app_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/back_button_finish_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:contentDescription="@string/back_button"
                android:src="@drawable/ic_keyboard_backspace_white_36dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:fontFamily="@font/lobster_regular"
                android:text="@string/adding_question"
                android:textAlignment="center"
                android:textColor="@color/whiteColor"
                android:textSize="28sp" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/add_question_image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:contentDescription="@string/add_question_asset"
                android:gravity="center"
                android:src="@drawable/ic_add_photo_alternate_white_24dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_question_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/whiteColor"
                    android:fontFamily="@font/lobster_regular"
                    android:hint="@string/add_question_text"
                    android:inputType="text"
                    android:singleLine="false" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/first_correct_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/whiteColor" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_first_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/whiteColor"
                        android:fontFamily="@font/lobster_regular"
                        android:hint="@string/first_answer"
                        android:inputType="text"
                        android:singleLine="false" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/second_correct_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/whiteColor" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_second_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/whiteColor"
                        android:fontFamily="@font/lobster_regular"
                        android:hint="@string/second_answer"
                        android:inputType="text"
                        android:singleLine="false" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/third_correct_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/whiteColor" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_third_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/whiteColor"
                        android:fontFamily="@font/lobster_regular"
                        android:hint="@string/third_answer"
                        android:inputType="text"
                        android:singleLine="false" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/fourth_correct_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/whiteColor" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_fourth_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/whiteColor"
                        android:fontFamily="@font/lobster_regular"
                        android:hint="@string/fourth_answer"
                        android:inputType="text"
                        android:singleLine="false" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <Button
                    android:id="@+id/clear_from"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/lobster_regular"
                    android:text="@string/clear_form"
                    android:layout_marginEnd="5dp"
                    android:textAllCaps="false"
                    android:textColor="@color/whiteColor"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/add_new_question"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/lobster_regular"
                    android:text="@string/add_question"
                    android:textAllCaps="false"
                    android:textColor="@color/whiteColor"
                    android:textSize="20sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky_logo"
    android:padding="10dp">

    <ImageView
        android:id="@+id/question_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:contentDescription="@string/image_of_a_question"
        android:src="@drawable/millionaire_logo" />

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_marginTop="10dp"
        android:background="@color/blackColor"
        android:textAlignment="center"
        android:textColor="@color/whiteColor"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/question_cost"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:background="@color/blackColor"
        android:textAlignment="center"
        android:textColor="@color/whiteColor"
        android:textSize="30sp" />

    <Button
        android:id="@+id/first_answer"
        style="@style/AnswerButton"
        android:background="@drawable/answer_button_shape" />

    <Button
        android:id="@+id/second_answer"
        style="@style/AnswerButton"
        android:background="@drawable/answer_button_shape" />

    <Button
        android:id="@+id/third_answer"
        style="@style/AnswerButton"
        android:background="@drawable/answer_button_shape" />

    <Button
        android:id="@+id/fourth_answer"
        style="@style/AnswerButton"
        android:background="@drawable/answer_button_shape" />
</LinearLayout>